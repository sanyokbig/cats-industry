.modal
  position fixed
  z-index 1
  left 0
  top 0
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.4)

.modal-content
  background-color #fefefe
  margin 15% auto
  min-width: 100px
  max-width: 100%
  width: 300px
  border 0px solid #00aee5
  border-radius: 4px
  
.modal-header
  background-color: #00aee5
  color: #fff
  padding: 5px 10px
.modal-body
  padding: 20px

textarea
  width:100%
  height: 200px