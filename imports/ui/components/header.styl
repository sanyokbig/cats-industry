.header
  display: flex
  padding: 10px
  color #fff
  background-color: #0075cb
  button
    font-size: 18px
    padding: 4px 8px
  .admin
    flex: 1
    margin auto
    .add
      display: inline-block
      margin 5px ato
      input
        font-size: 18px
        padding: 4px
        &[name=keyID]
          width: 250px
        &[name=vCode]
          width: 250px
    .keys
      margin-top: 5px
      select
        display: inline-block
        font-size: 18px
        padding: 4px
        width: 200px
    .label
      display: inline-block
      width: 160px
      font-size: 20px
  .login-form
    .login-name
      font-size: 24px
      padding 10px
    .logout
      float: right
  .login
    margin 10px auto
  .edit
    margin: 10px 0 10px
    textarea
      height: 100px
      width: 375px
      resize: none

