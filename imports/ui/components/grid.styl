.grid
  .controls
    padding: 20px
    border-bottom: 2px solid #0075cb
  .head
    display flex
    border-bottom: 2px solid #0075cb
    .cell
      cursor pointer
  .row
    display flex
    &:nth-child(2n)
      background-color: #ddd
  .cell
    overflow hidden
    display inline-block
    padding: 2px
    flex 1
    &.access-list
      cursor pointer
      &:hover
        background-color: rgba(50,200,200,0.2)
    &:nth-child(1)
      min-width 100px
    &:nth-child(2)
      flex 2
      min-width 250px

